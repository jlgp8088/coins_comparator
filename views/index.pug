extends layout

block content
  .button-container
    button(onclick="launchWebSocket('keyrock')") Actualizar KeyRock
    button(onclick="launchWebSocket('binance')") Actualizar Binance
    button(onclick="launchWebSocket('kraken')") Actualizar Kraken
  h1= 'COMPARADOR'
  table#dataTable
    thead
      tr
          th Trx Count
          th(colspan="3", id='keyrocks')
          th(colspan="3", id='binance') 
          th(colspan="3", id='kraken') 
          th(colspan="2") fees(0.1)
          th(colspan="2") fees(0.2)
      tr
        th(rowspan=2) PairCoin
        th(colspan="3") KEYROCK
        th(colspan="3") BINANCE
        th(colspan="3") KRAKEN
        th(colspan="2") KEYROCK/BINANCE
        th(colspan="2") KEYROCK/KRAKEN
      tr
        th BIDS
        th OFFERS
        th SPREAD
        th BIDS
        th OFFERS
        th SPREAD
        th BIDS
        th OFFERS
        th SPREAD
        th BIDS
        th OFFERS
        th BIDS
        th OFFERS
    tbody
      each item in list_coins
        tr
          td=item
          td(id=`bids_keyrocks_${item}`) 0
          td(id=`offers_keyrocks_${item}`) 0
          td(id=`spread_bids_keyrocks_${item}_offers_keyrocks_${item}`) 0
          td(id=`bids_binance_${item}`) 0
          td(id=`offers_binance_${item}`) 0
          td(id=`spread_bids_binance_${item}_offers_binance_${item}`) 0
          td(id=`bids_kraken_${item}`) 0
          td(id=`offers_kraken_${item}`) 0
          td(id=`spread_bids_kraken_${item}_offers_kraken_${item}`) 0

          td(id=`rel_bids_keyrocks_${item}_bids_binance_${item}`) 0
          td(id=`rel_offers_keyrocks_${item}_offers_binance_${item}`) 0
          td(id=`rel_bids_keyrocks_${item}_bids_kraken_${item}`) 0
          td(id=`rel_offers_keyrocks_${item}_offers_kraken_${item}`) 0

  h1= 'COMPARADOR KEYROCK / BINANCE'

  .table-container
    table#dataTable
      thead
        tr
          th(rowspan=2) PairCoin
          th(colspan="3") KEYROCK BID / BINANCE OFFERS
        tr
          th BIDS
          th OFFERS
          th SPREAD

      tbody
        each item in list_coins
          tr
            td=item
            td(id=`bids_keyrocks_${item}`) 0
            td(id=`offers_binance_${item}`) 0
            td(id=`spread_bids_keyrocks_${item}_offers_binance_${item}`) 0
            
    table#dataTable
      thead
        tr
          th(rowspan=2) PairCoin
